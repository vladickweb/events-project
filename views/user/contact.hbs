<div class="container margin-top text-white">

	<div class="row justify-content-center">
		<div class="col-md-6 transparent p-5">

			<h1>Contacta con nosotros</h1>

			<hr />

			<form action="/eventos/{{id}}/contacto" method="POST">

				<div class="form-group">
					<label for="from">Introduce tu email</label>
					<input type="email" class="form-control" id="from" name="from" />
				</div>

				<div class="form-group">
					<label for="message">Mensaje</label>
					<textarea class="form-control" id="message" rows="3" name="message"></textarea>
				</div>
				<div class="from-group">
					<input type="text" value="{{owner.email}}" hidden name="to">
				</div>

				<button type="submit" class="btn btn-dark btn-block">Enviar Mensaje</button>
			</form>
		</div>
	</div>
</div>

<script src="/js/background-texture.js"></script>

